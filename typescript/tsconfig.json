{
    "compileOnSave": true,

    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "outDir": "./build",
        "sourceMap": true,
        "strict": true,
        "target": "ES2018"
    },

    "include": [
        "./src"
    ],
    
    "exclude": [
        "./node_modules"
    ]
}
